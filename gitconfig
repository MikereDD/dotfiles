        smtpuser = *@*
        smtpserverport = 587
[color]
        ui = auto
        #diff = auto
        #status = auto
        #branch = auto
        interactive = auto
        pager = true
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[pager]
        diff =
        external =
[diff]
        tool = vimdiff
[merge]
	tool = diffconflicts
[difftool]
        prompt = false
[alias]
        ba = branch -a
        bav = branch -a -v
        bl = branch -l
        br = branch -r
        s = status -s -b
        diff = diff
        add = add
        ca = commit -a
        cm = commit -m
        po = push origin
        co = checkout
        clo = clone
        p = pull
        m = merge
        cb = git-create-branch
        rv = remote -v
        raus = remote add upstream
        f = fetch
        wc = whatchanged
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        dd = diff --color-words
        dc = diff --cached
        bb = branch -vv
        bc = branch --contains
        f = fetch --all --tags
        r = rebase
        re = reset --hard @{upstream}
        short = rev-parse --short
        mnf = merge --no-ff
        vdm = mergetool -t vimdiff
[mergetool "diffconflicts"]
	cmd = diffconflicts $EDITOR $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
